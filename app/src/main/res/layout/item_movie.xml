<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:padding="@dimen/activity_margin">
    
    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        tools:src="@drawable/poster_aquaman"/>

    <TextView
        android:id="@+id/tv_nama_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@id/img_foto"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/test_name"
        android:textColor="@android:color/black"
        android:textSize="17.6sp" />

    <TextView
        android:id="@+id/tv_tgl_rilis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama_film"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@id/img_foto"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginBottom="20dp"
        android:text="@string/test_tgl"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tgl_rilis"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/img_foto"
        android:fontFamily="@font/open_sans"
        android:maxLines="3"
        android:textSize="14.4sp"
        tools:text="@string/test_desc" />

</RelativeLayout>